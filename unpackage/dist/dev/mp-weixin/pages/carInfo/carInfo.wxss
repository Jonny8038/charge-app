
.container{
	padding-bottom: 98rpx;
}
.content{
	width: 100%;
	height: auto;
	overflow-y: scroll;
}
.xxtop{
	padding: 0 24rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 22rpx;
	color: #666666;
}
.xxcon{
	padding: 0 24rpx;
	background: #fff;
}
.xxitem{
	display: flex;
	justify-content: space-between;
	height: 80rpx;
	line-height: 80rpx;
}
.xxitem text:first-child{
	font-size: 26rpx;
	color: #333333;
}
.xxitem text:last-child{
	font-size: 30rpx;		
	color: #333333;
	font-weight: bold;
	text-align: right;
}
.xxcon1{
	padding: 40rpx 70rpx;
	display: flex;
	justify-content: space-between;
}
.xxcon1 image{
	width: 280rpx;
	height: 160rpx;
	border: 1px solid #DCDCDC;
	border-radius: 10rpx;
}
.btn{
	position: fixed;
	bottom: 0;
	width: 100%;
	padding-top: 20rpx;
	padding-bottom: constant(safe-area-inset-bottom);
	/* 兼容 iOS < 11.2 */
	padding-bottom: env(safe-area-inset-bottom);
	/* 兼容 iOS >= 11.2 */
	background: #fff;
}
.btncon{
	width: 100%;
	height: 98rpx;
	line-height: 98rpx;
	font-size: 30rpx;
	color: #fff;
	font-weight: bold;
	background: #212D43;
	text-align: center;
}

